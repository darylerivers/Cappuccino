# Alpaca API Configuration
# Copy this file to .env and fill in your actual keys
# NEVER commit .env to git!

# Alpaca Paper Trading API Keys
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Email Alert Configuration (optional)
ALERT_EMAIL_FROM=your_email@gmail.com
ALERT_EMAIL_TO=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Twilio SMS Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_FROM=+1234567890
TWILIO_PHONE_TO=+1234567890

# Trading Configuration
INITIAL_CAPITAL=500
ENABLE_EMAIL_ALERTS=false
ENABLE_SMS_ALERTS=false

# FRED API Configuration (St. Louis Federal Reserve Economic Data)
# Get your free API key at: https://fred.stlouisfed.org/docs/api/api_key.html
# Sign up takes ~2 minutes, no credit card required
FRED_API_KEY=your_fred_api_key_here

# Ollama Configuration (for sentiment analysis)
OLLAMA_HOST=http://localhost:11434
